<style>
	html {
		background-size: 90px 90px;
		background-image: linear-gradient(90deg,rgba(38,38,38,.3) 1px,transparent 0),linear-gradient(180deg,rgba(38,38,38,.3) 1px,transparent 0);
		--tw-bg-opacity: 1;
		background-color: rgb(23 23 23/var(--tw-bg-opacity));
		background-color: #09050f;
		--tw-text-opacity: 1;
		color: rgb(245 245 245/var(--tw-text-opacity));
		/* background: linear-gradient(180deg,#09050f 0%,#0f0705 100%); */
	}
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 67.45rem; /* 70rem normal; 67.45rem (runs along guidelines in background) */
		color: #fff;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.header {
		align-items: center;
		display: flex;
		font-size: 1.33rem;
		justify-content: space-between;
		padding: 16px 0 26px;
	}
	.header-left {
		display: flex;
	}
	.header-left-role {
		opacity: .25;
	}
	.card-grid {
		/* display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0; */
		display: grid;
		grid-gap: 20px;
		grid-template-columns: repeat(12,1fr);
	}
	.card-hello {
		background: #131311;
		background-size: cover;
    	padding: 51px 58px;
		border-radius: 25px 50px 5px;
		grid-column: 1/9;
	}
	.card-hello:before {
		background: linear-gradient(18.48deg,rgba(255,255,255,.25) 2.76%,rgba(255,255,255,0) 17.23%),linear-gradient(200.6deg,rgba(255,255,255,.25) 4.13%,rgba(255,255,255,0) 20.54%);
		border-radius: inherit;
		content: "";
		inset: 0;
		-webkit-mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask-composite: xor;
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		padding: 1px;
		pointer-events: none;
		position: absolute;
	}
	.card-grid>* {
		isolation: isolate;
		overflow: hidden;
		position: relative;
	}
	.card-hello-header {
		display: flex;
		align-items: center;
		flex-direction: row;
		justify-content: space-between;
		margin-bottom: 2rem;
		position: relative;
		z-index: 2;
	}
	.card-hello-header-left {
		display: flex;
		align-items: center;
		flex-direction: row;
	}
	.card-hello-header-left-image {
		height: 48px;
		width: 48px;
		margin-right: 1.5rem; /* 1.25rem */
		border-radius: 50%;
		/* border: rgb(var(--accent)) 1px solid; */
	}
	.card-hello-header-left-text {
		display: flex;
		flex-direction: column;
	}
	.card-hello-header-left-text-head {
		margin: 0;
		margin-block: 0;
		margin-inline: 0;
		margin-bottom: 2px;
		font-weight: 400;
	}
	.card-hello-header-left-text-sub {
		margin: 0;
		margin-block: 0;
		margin-inline: 0;
		opacity: .32;
	}
	.card-hello-header-right {
		display: flex;
		align-items: center;
		flex-direction: row;
	}
	.card-hello-header-right-social {
		align-items: center;
		background: rgba(255,255,255,.02);
		border-radius: 6px;
		color: #fff;
		display: flex;
		height: 40px;
		justify-content: center;
		position: relative;
		transition: .45s cubic-bezier(.6,.6,0,1) background-color,.45s cubic-bezier(.6,.6,0,1) transform;
		width: 40px;
		margin-right: .65rem;
	}
	.card-hello-header-right-social:before {
		background: linear-gradient(180deg,rgba(255,255,255,.04) 0%,rgba(255,255,255,0) 100%);
		border-radius: inherit;
		content: "";
		inset: 0;
		-webkit-mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask-composite: xor;
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		padding: 1px;
		pointer-events: none;
		position: absolute;
		text-decoration: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.card-hello-header-right-social:hover {
		background: rgba(255,255,255,.04);
		transform: scale(1.1);
	}
	.card-hello-header-right-social-link {
		text-decoration: none;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.card-hello-header-right-social-icon {
		color: #fff;
	}
	.card-hello-title {
		font-weight: 400;
		position: relative;
		z-index: 2;
	}
	.card-hello-desc {
		max-width: 70%;
		opacity: 0.6;
		position: relative;
		z-index: 2;
	}
	.card-location {
		/* background: #131311;
		background-size: cover;
		grid-column: 5/13;
		border-radius: 50px 25px 50px 5px; */
		background-image: url("/public/assets/images/Houston.png");
		background-repeat: no-repeat;
		background-position: center;
		background-size: 100%;
    	border-radius: 50px 25px 50px 5px;
    	grid-column: 9/13;
		display: flex;
		align-items: center;
		justify-content: center;
		transition-duration: .5s;
	}
	.card-location::before {
		background: linear-gradient(112.59deg,rgba(255,255,255,0) 83.32%,rgba(255,255,255,.1) 94.31%),linear-gradient(109.73deg,rgba(255,255,255,.1) 7.85%,rgba(255,255,255,0) 19.46%);
		border-radius: inherit;
		content: "";
		inset: 0;
		-webkit-mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask: linear-gradient(#fff 0 0) content-box,linear-gradient(#fff 0 0);
		mask-composite: xor;
		-webkit-mask-composite: xor;
		mask-composite: exclude;
		padding: 1px;
		pointer-events: none;
		position: absolute;
	}
	.card-hello-background {
		animation: rotateCardHelloBackground 100s linear infinite;
		height: 1010px;
		left: 50%;
		pointer-events: none;
		position: absolute;
		top: 50%;
		transform: translate(-50%,-50%);
		width: 1010px;
		z-index: 0;
	}
	@keyframes rotateCardHelloBackground {
		from {
			transform: translate(-50%,-50%) rotate(0deg);
		}
		to {
			transform: translate(-50%,-50%) rotate(360deg);
		}
	}
	.card-location:hover > .card-location-img {
		transform: scale(1.1) rotate(5deg);
	}
	.card-location-img {
		height: 68px;
		width: 68px;
		border-radius: 50%;
		border: rgb(var(--accent)) 2px solid;
		position: relative;
		display: inline-block;
		transition-property: transform;
		transition-timing-function: cubic-bezier(.4,0,.2,1);
		transition-duration: .5s;
	}
	.card-status {
		position: absolute;
	}
	.card-status:before {
		content: '';
		position: absolute;
		left: calc(4.75rem / -2);
		top: calc(4.75rem / -2);
		width: 4.75rem;
		height: 4.75rem;
		border-radius: 50%;
		background: rgb(132 204 22/ 1);
		/* background: #72ff7d; */
		animation: pulse 1s cubic-bezier(0,0,.2,1) infinite;
	}
	@keyframes pulse {
		from {
			transform: scale(0.5);
			opacity: 1;
		}

		to {
			transform: scale(1.5);
			opacity: 0;
		}
		}
	.card-location-text {
		background-color: rgba(19, 19, 17, .8);
		background-color: rgb(255, 255, 255, .1);
		/* background-color: #fff; */
		border-radius: 24px;
		width: fit-content;
		padding: 5px 12px 5px 10px;
		font-size: 0.9rem;
		/* font-weight: 500; */
		/* display: flex;
		align-items: center;
		justify-content: center; */
		position: absolute;
		bottom: 11px;
		left: 50%;
		transform: translateX(-50%);
		backdrop-filter: blur(2px); /* 3px */
	}
	.card-currently {
		background: linear-gradient(129.93deg,#ff4650 0%,#f06e62 100%);
		height: 434px;
		padding: 57px 0 57px 54px;
		border-radius: 50px 5px 5px 25px;
    	grid-column: 1/6;
	}
	.card-currently-title {
		font-weight: 400;
		color: #ffffffb3;
		line-height: 1.18em;
	}
	.card-currently-title-emphasis, .card-currently-desc-emphasis {
		color: #ffffff;
	}
	.card-currently-desc {
		max-width: 70%;
		color: #ffffffb3;
		position: relative;
		z-index: 2;
	}

	.lazy-image {
		display: block;
    	transition: 1s cubic-bezier(.6,.6,0,1) opacity;
	}
	.card-currently-background {
		/* animation: rotateCardCurrentlyBackground 100s linear infinite;
		height: 1010px;
